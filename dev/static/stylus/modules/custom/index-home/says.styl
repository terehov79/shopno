.says
  width 100%
  display flex
  flex-direction column
  justify-content: center;
  align-items: center;
  padding-bottom 120px
  &--wrap
    width 100%
    padding: 100px 0;
    background-color #f9fbfb
  &__title
    @extend .about__title
  &__text
    @extend .about__text
  &_slider
    width: 100%;
    .swiper-container
      padding-bottom: 50px;
    .swiper-pagination
      bottom 15px
    .swiper-pagination-bullet-active
      background-color baseCyan
  &_slide
    width 100%
    display: flex;
    justify-content: center;
  &_slide2
    width: 100%;
    background-color: #eaebed
    padding 80px 100px
    margin-bottom 30px
    display flex
    justify-content flex-start
    align-items: center;
    flex-direction column
    @media $xs-and-smaller
      padding: 80px 20px;
    &__name
      display flex
      justify-content: center;
      align-items: center;
    &__title
      font-size 20px
      font-weight: 800;
    &__job
      font-size 15px
      font-weight: 400;
      font-style italic
      margin-left: 7px;
    &__text
      padding 25px 0 30px
      text-align center
      line-height: 1.8;
.butt_nav
  width 100%
  display flex
  flex-direction row
  justify-content: flex-end;
  .btn_nav
    border none
    size(50px)
    background-color white
    margin-left 20px
    box-shadow: 11px 10px 19px 0px rgba(0,0,0,0.12);
    border-radius 5px
    transition transition
    &:hover
      background-color baseCyan
    svg
      size(20px)
  .btn-prev
    svg
      transform rotate(-180deg)
