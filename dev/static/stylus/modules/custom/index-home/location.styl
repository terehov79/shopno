.location
  width 100%
  padding: 100px 0;
  background-image url("../img/general/contact_bg.png")
  background-repeat no-repeat
  background-position center center
  background-size cover
  @media $xs-and-smaller
    padding-top 50px
  &-form
    width 100%
    height: 100%;
    background-color rgba(74,88,98,0.9);
    padding 25px
    display flex
    flex-direction column
    justify-content: space-between;
    align-items flex-start
    &__up
      width 100%
    &__label
      width: 100%;
      margin-bottom: 20px;
      border-bottom 1px solid rgba(255,255,255,0.3)
    &__input
      width: 100%;
      background-color transparent
      border none
      color white
      padding-bottom: 12px;
      &::placeholder
        color rgba(255,255,255,0.5)
    &__area
      width: 100%;
      background-color transparent
      border none
      color white
      height: 100px;
      resize none
      &::placeholder
        color rgba(255,255,255,0.5)
    &__btn
      width: 100%;
    &__submit
      background-color baseCyan
      border-color baseCyan
      letter-spacing 2px
  &-map
    width 100%
    height: 100%;
    background-color rgba(74,88,98,0.9);
    padding 25px
    &__text
      color rgba(255,255,255,0.5)
      line-height 1.8
      a
       color rgba(255,255,255,0.5)
       margin-left 5px
    &__map
      width: 100%;
      height: 220px;
      iframe
        width: 100%;
        height: 100%;