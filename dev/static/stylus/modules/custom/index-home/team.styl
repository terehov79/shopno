.team
  width 100%
  display flex
  flex-direction column
  justify-content: center;
  align-items: center;
  padding-bottom 120px
  @media $sm-and-smaller
    padding-bottom 50px
  &--wrap
    width 100%
    padding: 100px 0 0;
    @media $sm-and-smaller
      padding-top 50px
  &__title
    @extend .about__title
  &__text
    @extend .about__text
  &_pics
    display flex
    flex-direction column
    width 100%
    height 420px
    position relative
    overflow hidden
    margin-bottom 30px
    @media $lg-and-smaller
      height: 550px;
    @media $xs-and-smaller
      height: 420px;
    &:hover .team_pics__info
      opacity 1
      z-index 2
    img
      width: 100%;
      height: 100%;
      object-fit cover
      object-position top left
    &__info
      width: calc(100% - 40px);
      background-color baseCyan
      position absolute
      bottom 20px;
      left 20px
      z-index: -1;
      display flex
      flex-direction column
      justify-content: center;
      align-items: center;
      padding: 40px;
      transition transition
      opacity 0
      &::before
        content ""
        position absolute
        bottom: 100%;
        left: 40px;
        width: 20px;
        height: 20px;
        background-color baseCyan
        clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        z-index: 1;
    &__name
      display flex
      justify-content: center;
      align-items: center;
      @media $xs-and-smaller
        width 100%
        flex-direction column
        align-items: flex-start;
        justify-content: flex-start;
    &__title
      font-size 20px
      font-weight: 800;
    &__job
      font-size 15px
      font-weight: 400;
      font-style italic
      margin-left: 7px;
    &__text
      padding 25px 0 30px
.social
  width: 100%;
  display flex
  justify-content: flex-start;
  align-items: center;
  &__item
    margin-right: 10px;
  &__link
    display flex
    justify-content: center;
    align-items: center;
    size(20px)
    &:hover svg
      fill white
    svg
      size(100%)
      fill black
      transition transition