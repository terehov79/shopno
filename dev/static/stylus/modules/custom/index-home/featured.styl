.featured
  width: 100%;
  display flex
  flex-direction column
  justify-content: center;
  align-items: center;
  padding-bottom: 120px;
  @media $sm-and-smaller
    padding-bottom: 50px;
  &--wrap
    width 100%
    padding: 100px 0 0;
    @media $sm-and-smaller
      padding-top 50px
  &__title
    @extend .about__title

  &__text
    @extend .about__text
  &_pics
    display flex
    flex-direction column
    padding-bottom: 30px;
