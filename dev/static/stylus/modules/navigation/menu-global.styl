.menu_wrap
  position fixed
  width 200px
  background greenyellow
  z-index 1000
  display flex
  transform translateX(-202px)
  transition all .3s ease

.menu_wrap_active
  transform translateX(0)
  transition all .3s ease

.menuGlobal
  width 100%
  padding 15px
  &__link
    color #fff
    transition all .3s ease
    &:hover
      transition all .3s ease
      color baseGrayText

.menu_click
  width 35px
  height 30px
  display flex
  align-items center
  justify-content center
  position absolute
  top 0
  left 100%
  border-left 2px solid transparent
  button
    border unset
    outline unset
    width 100%
    height 100%
    line-height 0
    display flex
    align-items center
    justify-content center
    background greenyellow
    color #fff
    font-size rem(25)
    font-weight bold
    cursor pointer