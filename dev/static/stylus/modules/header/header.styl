.header
  width 100%
  padding-top 65px
  display flex
  justify-content space-between
  align-items center
  @media $lg-and-smaller
    padding-top: 30px;
  &--wrap
    width 100%
    position fixed
    top 0
    left 0
    z-index 9999
  &__menu
    display block
    height: calc(100% - 170px);
    width: 200px;
    position fixed
    bottom 10px
    right -105%
    background-color white
    z-index 9998
    padding: 30px 0;
    box-shadow: 0px 5px 5px 0px rgba(0,0,0,0.25);
    //height calc(100% - 120px)
    flex-direction column
    transition all 0.3s ease-in-out
  .menu--active
    right 10px
.logotype
  width auto
  display inline-block
  background-color baseGreyLight
  &__img
    width: auto;