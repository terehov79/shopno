.select-gl
	width max-content
	margin-bottom 10px
	&--icon
		.select-gl
			&__list
				border-color
			&__this
				width 168px
			&__value
				padding 0 30px 0 10px
				justify-content flex-start
				background white
				font-weight 300
				color gray
				border-color gray
			&__item
				font-weight 300
			&__drop
				right 10px
			&__icon
				size(15px)
				fill gray
				margin-right 7px
	&__this
		width 118px
		position relative
	&__value
		position relative
		padding 0 15px 0 0
		size(100%, 45px)
		display flex
		justify-content center
		align-items center
		border 1px solid gray
		border-radius 5px
		color #525252
		font-weight 600
		background transparent
	&__drop
		size(10px)
		fill #525252
		position absolute
		right 15px
		top 18px
		transition()
	&__list
		overflow hidden
		display none
		width 100%
		position absolute
		top calc(100% + 2px)
		left 0
		border-radius 5px
		border 1px solid gray
		background white
		z-index 15
	&__item
		padding 0 15px
		width 100%
		height 30px
		display flex
		justify-content flex-start
		align-items center
		font-weight 600
		cursor pointer
		transition()
		border none
		background none
	.icons-js
		svg
			size(15px)
			fill gray
			margin-right 7px
			transition()
	.selected
		background-color pink
		color white
		svg
			fill white
	.select__active
		.select-gl__drop
			transform rotate(-180deg)